                                        <div class="card">
                                            <div class="card-header">
                                                <h5 class="mb-0">User Profile</h5>
                                            </div> 
                                            <div class="card-body">
                                                <form action="/editProfile" method="post">
                                                    <div class="mb-3">
                                                        <label for="name" class="form-label">Name</label>
                                                        <input type="text" class="form-control" id="name" name="name"  value="<%= user&&user.name || gUser&&gUser.displayName || ""  %>">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="email" class="form-label">Email address</label>
                                                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" value="<%= user&&user.email || gUser&&gUser.email ||"" %>">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="phone" class="form-label">Phone Number</label>
                                                        <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter your phone number" value="<%= user&&user.phone || gUser&&gUser.phone || "" %>">
                                                    </div>
                                                    <button type="submit" class="btn btn-primary">Update Details</button>
                                                </form>
                                                <hr>
                                                <form action="/changePassword/<%= user._id %>" method="post">
                                                    <div class="mb-3">
                                                        <label for="currentPassword" class="form-label">Current Password</label>
                                                        <input type="password" class="form-control" name="currentPassword" id="currentPassword" placeholder="Enter your current password">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="newPassword" class="form-label">New Password</label>
                                                        <input type="password" class="form-control" name="newPassword" id="newPassword" placeholder="Enter your new password">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="confirmNewPassword" class="form-label">Confirm New Password</label>
                                                        <input type="password" class="form-control" name="confirmNewPassword" id="confirmNewPassword" placeholder="Confirm your new password">
                                                    </div>
                                                    <button type="submit" class="btn btn-primary">Reset Password</button>
                                                </form>
                                            </div>
                                        </div>
                                        
                                        
                                    </div>


                                </div>
